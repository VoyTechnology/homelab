[Unit]
Description="Consul Server"
Requires=tailscaled.service
After=tailscaled.service
ConditionFileNotEmpty=/etc/consul.d/server.hcl

[Service]
User=consul
Group=consul
ExecStart=/opt/consul/consul agent -config-dir=/etc/consul.d/server.hcl -advertise '{{ GetInterfaceIP "tailscale0" }}'
ExecReload=/opt/consul/consul reload
KillMode=process
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
