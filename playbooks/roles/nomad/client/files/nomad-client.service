[Unit]
Description="Nomad Client"
Requires=network-online.target
After=network-online.target
ConditionFileNotEmpty=/etc/nomad.d/client.hcl

[Service]
ExecStart=/opt/nomad/nomad agent -config=/etc/nomad.d/client.hcl
ExecReload=/usr/bin/nomad reload
KillMode=process
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
