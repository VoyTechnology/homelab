[Unit]
Description="Consul Agent"
Requires=network-online.target
After=network-online.target
ConditionFileNotEmpty=/etc/consul.d/agent.hcl

[Service]
User=consul
Group=consul
ExecStart=/opt/consul/consul agent -config-dir=/etc/consul.d/agent.hcl
ExecReload=/opt/consul/consul reload
KillMode=process
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target