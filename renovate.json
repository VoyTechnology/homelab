{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":semanticCommits"
  ],
  "platform": "github",
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "reviewersFromCodeOwners": true,
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "packageRules": [
    {
      "description": "Enable major updates for Docker images",
      "matchDatasources": ["docker"],
      "separateMajorMinor": true
    },
    {
      "description": "Enable major updates for Helm charts",
      "matchDatasources": ["helm"],
      "separateMajorMinor": true
    },
    {
      "description": "Group Helm chart updates",
      "matchManagers": ["helm-values", "helmfile"],
      "groupName": "helm-charts"
    },
    {
      "description": "Group Docker image updates",
      "matchManagers": ["docker-compose", "dockerfile"],
      "groupName": "docker-images"
    },
    {
      "description": "Group Kubernetes updates",
      "matchManagers": ["kubernetes"],
      "groupName": "kubernetes-manifests"
    },
    {
      "description": "Auto-merge patch updates for stable dependencies",
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0\\./",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Separate major updates",
      "matchUpdateTypes": ["major"],
      "addLabels": ["major-update"],
      "prPriority": 10
    }
  ],
  "helm-values": {
    "fileMatch": [
      "argo/apps/.+\\.ya?ml$",
      "charts/.+/values\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "argo/apps/.+\\.ya?ml$",
      "charts/.+/templates/.+\\.ya?ml$",
      "home-services/.+/templates/.+\\.ya?ml$"
    ]
  },
  "regexManagers": [
    {
      "description": "Update chart versions in Chart.yaml files",
      "fileMatch": ["Chart\\.ya?ml$"],
      "matchStrings": [
        "version:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s*$"
      ],
      "depNameTemplate": "{{replace '/' '-' packageFile}}",
      "datasourceTemplate": "helm"
    },
    {
      "description": "Update image tags in YAML files",
      "fileMatch": ["\\.ya?ml$"],
      "matchStrings": [
        "image:\\s*[\"']?(?<depName>[^:\\s]+):(?<currentValue>[^\\s\"']+)[\"']?",
        "tag:\\s*[\"']?(?<currentValue>[^\\s\"']+)[\"']?"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "description": "Update Ansible versions",
      "fileMatch": ["ansible/.+\\.ya?ml$"],
      "matchStrings": [
        "k3s_version:\\s*[\"']?(?<currentValue>v[^\\s\"']+)[\"']?"
      ],
      "depNameTemplate": "k3s-io/k3s",
      "datasourceTemplate": "github-releases"
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/.git/**"
  ]
}
