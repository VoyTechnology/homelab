{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":semanticCommits", ":dependencyDashboard"],
  "schedule": ["at any time"],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "baseBranchPatterns": ["main"],
  "configMigration": true,
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update dependencies in jsonnet files",
      "managerFilePatterns": ["/.*\\.(jsonnet|libsonnet)$/"],
      "matchStrings": [
        "//\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(?:\\s+registryUrl=(?<registryUrl>\\S+))?[\\s\\S]*?targetRevision\\s*=\\s*['\"](?<currentValue>[^'\"]+)['\"]"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}",
      "registryUrlTemplate": "{{registryUrl}}"
    },
    {
      "customType": "regex",
      "description": "Update GitHub release file URLs with version in filename",
      "managerFilePatterns": ["/.*\\.(ya?ml)$/"],
      "matchStrings": [
        "# renovate: datasource=github-releases(?:-files)? depName=(?<depName>[^\\s]+)\\s*\\n\\s*- https://github\\.com/(?<owner>[^/]+)/(?<repo>[^/]+)/releases/download/v?(?<currentValue>[0-9]+(?:\\.[0-9]+)*)/(?<prefix>[^-]*-)(?<fileVersion>[0-9]+(?:\\.[0-9]+)*)(?<suffix>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "{{depName}}",
      "autoReplaceStringTemplate": "https://github.com/{{owner}}/{{repo}}/releases/download/v{{newValue}}/{{prefix}}{{newValue}}{{suffix}}"
    }
  ]
}
