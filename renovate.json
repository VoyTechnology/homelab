{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":semanticCommits", ":dependencyDashboard"],
  "schedule": ["at any time"],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "baseBranchPatterns": ["main"],
  "configMigration": true,
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update dependencies in jsonnet files",
      "managerFilePatterns": ["/.*\\.(jsonnet|libsonnet)$/"],
      "matchStrings": [
        "//\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(?:\\s+registryUrl=(?<registryUrl>\\S+))?[\\s\\S]*?targetRevision\\s*=\\s*['\"](?<currentValue>[^'\"]+)['\"]"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}",
      "registryUrlTemplate": "{{registryUrl}}"
    },
    {
      "customType": "regex",
      "description": "Update GitHub release attachments in YAML files",
      "managerFilePatterns": [".*\\.(ya?ml)$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=github-release-attachments\\s+depName=(?<depName>\\S+)\\s+assetName=(?<assetName>[^\\s]+)\\s*\\n\\s*-\\s*https://github\\.com/[^/]+/[^/]+/releases/download/v?(?<currentValue>[^/]+)/[^\\s\"']*"
      ],
      "datasourceTemplate": "github-release-attachments",
      "depNameTemplate": "{{depName}}",
      "assetNameTemplate": "{{assetName}}"
    }
  ]
}
