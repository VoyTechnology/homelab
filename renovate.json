{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard"
  ],
  "schedule": [
    "at any time"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "baseBranchPatterns": [
    "main"
  ],
  "configMigration": true,
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update dependencies in jsonnet files",
      "managerFilePatterns": [
        "/.*\\.(jsonnet|libsonnet)$/"
      ],
      "matchStrings": [
        "//\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(?:\\s+registryUrl=(?<registryUrl>\\S+))?[\\s\\S]*?targetRevision\\s*=\\s*['\"](?<currentValue>[^'\"]+)['\"]"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}",
      "registryUrlTemplate": "{{registryUrl}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        ".*\\.(ya?ml|jsonnet|libsonnet)$"
      ],
      "matchStrings": [
        "renovate: datasource=(?<datasource>[^\\s]+) depName=(?<depName>[^\\s]+)(?: registryUrl=(?<registryUrl>[^\\s]+))?\\s*\\n.*?:\\s*\"?(?<currentValue>[0-9a-zA-Z\\.\\-]+)\"?"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}",
      "registryUrlTemplate": "{{registryUrl}}",
      "versioningTemplate": "semver"
    }
  ]
}
